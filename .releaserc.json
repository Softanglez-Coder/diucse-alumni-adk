{
  "branches": [
    "main",
    "master"
  ],
  "repositoryUrl": "https://github.com/Softanglez-Coder/diucse-alumni-adk.git",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "releaseRules": [
          {"type": "feat", "release": "minor"},
          {"type": "fix", "release": "patch"},
          {"type": "perf", "release": "patch"},
          {"breaking": true, "release": "major"}
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "npm run build:all"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "publishCmd": "cd dist/diucsealumni/core && npm publish --access public && cd ../models && npm publish --access public && cd ../services && npm publish --access public && cd ../utils && npm publish --access public"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "package.json",
          "package-lock.json",
          "projects/diucsealumni/core/package.json",
          "projects/diucsealumni/models/package.json",
          "projects/diucsealumni/services/package.json",
          "projects/diucsealumni/utils/package.json"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ]
}
