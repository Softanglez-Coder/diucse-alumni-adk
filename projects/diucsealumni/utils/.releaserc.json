{
  "branches": [
    "main",
    "master"
  ],
  "repositoryUrl": "https://github.com/Softanglez-Coder/diucse-alumni-adk.git",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "releaseRules": [
          {"type": "feat", "scope": "utils", "release": "minor"},
          {"type": "fix", "scope": "utils", "release": "patch"},
          {"type": "perf", "scope": "utils", "release": "patch"},
          {"breaking": true, "scope": "utils", "release": "major"}
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {"type": "feat", "scope": "utils", "section": "Features"},
            {"type": "fix", "scope": "utils", "section": "Bug Fixes"},
            {"type": "perf", "scope": "utils", "section": "Performance Improvements"}
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "cd ../../../ && ng build @diucsealumni/utils"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "pkgRoot": "../../../dist/diucsealumni/utils"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "package.json"
        ],
        "message": "chore(release): @diucsealumni/utils@${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ]
}
